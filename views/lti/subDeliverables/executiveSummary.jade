- var executiveSummary = getSubDeliverable('executivesummary')
h2.subdeliverable-title
  span= executiveSummary.title
p.subdeliverable-description!= executiveSummary.description

- var addActionLink = '/lti/form/submit/businessplan/executivesummary'
- var ventureDescription = getActivity('venturedescription')
div.activity-container#venturedescription
  h3.activity-title= ventureDescription.title
  p.activity-description!= ventureDescription.description

  - var activityId = 'venturedescription'
  - var ventureDescriptionValue = results.find(result => result.name === activityId)
  - var form = ventureDescriptionValue ? {action: `/lti/form/update/${ventureDescriptionValue._id}`, data: ventureDescriptionValue.data } : {action: `${addActionLink}/${activityId}`, data: '' }
  include ../form/form.jade

